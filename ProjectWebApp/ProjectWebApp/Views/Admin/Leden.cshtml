@{
    ViewData["Title"] = "Gebruiker admin";
}
@model ProjectWebApp.ViewModel.LedenListView
<h1>@ViewData["Title"]</h1>

<p>Welkom op de gebruiker admin pagina!</p>

<div class="text-center">
    <form class="mt-5" asp-action="CreateLid" method="get">
        <div class="form-group">
            <input type="submit" value="Nieuw lid" class="btn" style="background-color: red !important; color: white !important;" />
        </div>
    </form>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Leden[0].Id)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Leden[0].Naam)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Leden[0].Betaald)
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Leden)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Naam + @item.Voornaam
                    </td>
                    <td>
                        @item.Betaald
                    </td>
                    <td><a class="button" asp-action="EditLid" asp-route-id="@item.Id">Aanpassen</a></td>
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("admin"))
                        {
                            <td><a class="button" asp-action="DeleteLid" asp-route-id="@item.Id">Verwijderen</a></td>
                        }
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
