@model ProjectWebApp.ViewModel.LedenListView
@{
    ViewData["Title"] = "Leden lijst";
}
<div class="text-center">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Leden[0].Id)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Leden[0].Naam)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Leden[0].Betaald)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Leden)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Naam + @item.Voornaam
                    </td>
                    <td>
                        @item.Betaald
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
