@model ProjectWebApp.ViewModel.LidUpdateCreateView

@{
    ViewData["Title"] = "Lid updaten";
}


<h1 class="mt-5">@ViewData["Title"]</h1>



<div class="row mt-5">
    <form asp-action="EditLid" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" />
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Naam" class="control-label">@Html.DisplayNameFor(model => this.Model.Naam)</label>
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voornaam" class="control-label">@Html.DisplayNameFor(model => this.Model.Voornaam)</label>
                <input asp-for="Voornaam" class="form-control" />
                <span asp-validation-for="Voornaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">@Html.DisplayNameFor(model => this.Model.Email)</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefoon" class="control-label">@Html.DisplayNameFor(model => this.Model.Telefoon)</label>
                <input asp-for="Telefoon" class="form-control" />
                <span asp-validation-for="Telefoon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsOuder" class="control-label">@Html.DisplayNameFor(model => this.Model.IsOuder)</label>
                <input type="checkbox" asp-for="IsOuder" class="form-check" />
                <span asp-validation-for="IsOuder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Betaald" class="control-label">@Html.DisplayNameFor(model => this.Model.Betaald)</label>
                <input type="checkbox" asp-for="Betaald" class="form-check" />
                <span asp-validation-for="Betaald" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Geboortedatum" class="control-label">@Html.DisplayNameFor(model => this.Model.Geboortedatum)</label>
                <input type="datetime" asp-for="Geboortedatum" class="from-check" />
                <span asp-validation-for="Geboortedatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroepId" class="control-label">Groep</label>
                <select class="form-select" asp-for="GroepId" asp-items="Model.AlleGroepen">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Updaten" class="btn" style="background-color: red !important; color: white !important;" />
                <a asp-action="Leden" class="btn" style="background-color: red !important; color: white !important;">Terug</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
