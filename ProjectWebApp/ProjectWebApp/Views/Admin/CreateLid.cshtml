@model ProjectWebApp.ViewModel.LidUpdateCreateView

@{
    ViewData["Title"] = "Donut aanmaken";
}


<h1 class="mt-5">@ViewData["Title"]</h1>


<form asp-action="CreateLid" method="post">
    <div class="row mt-5">
        <div asp-validation-summary="ModelOnly" class="text-danger" />
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Naam" class="control-label">@Html.DisplayNameFor(model => this.Model.Naam)</label>
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voornaam" class="control-label">@Html.DisplayNameFor(model => this.Model.Voornaam)</label>
                <input asp-for="Voornaam" class="form-control" />
                <span asp-validation-for="Voornaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">@Html.DisplayNameFor(model => this.Model.Email)</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefoon" class="control-label">@Html.DisplayNameFor(model => this.Model.Telefoon)</label>
                <input asp-for="Telefoon" class="form-control" />
                <span asp-validation-for="Telefoon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsOuder" class="control-label">@Html.DisplayNameFor(model => this.Model.IsOuder)</label>
                <input type="checkbox" asp-for="IsOuder" class="form-check" />
                <span asp-validation-for="IsOuder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Betaald" class="control-label">@Html.DisplayNameFor(model => this.Model.Betaald)</label>
                <input type="checkbox" asp-for="Betaald" class="form-check" />
                <span asp-validation-for="Betaald" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Groep" class="control-label">@Html.DisplayNameFor(model => this.Model.Groep)</label>
                <select class="form-select" asp-for="Groep" id="Groep">
                    @foreach (var groep in this.Model.AlleGroepen)
                    {
                        <option>@groep.Naam</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Aanmaken" class="btn" style="background-color: hotpink !important; color: white !important;" />
                <a asp-action="Donuts" class="btn" style="background-color: hotpink !important; color: white !important;">Terug</a>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }